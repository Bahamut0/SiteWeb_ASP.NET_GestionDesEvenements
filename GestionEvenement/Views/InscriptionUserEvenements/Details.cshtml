@model GestionEvenement.Models.InscriptionUserEvenement

    <h2 class="text-center text-capitalize">Infos supplémentaires</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card" style="width: 30rem;">
            <img src="@Url.Content(Model.Evenement.Image)" alt="Ma photo" class="card-img-top" width="300" height="280" />

            <div class="card-body text-center">
                <h5 class="card-title"> @Html.DisplayFor(model => model.Evenement.Libelle)</h5>

            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Description : @Html.DisplayFor(model => model.Evenement.Description)</li>
                <li class="list-group-item">Adresse :  @Html.DisplayFor(model => model.Evenement.Adresse.Numero)  @Html.DisplayFor(model => model.Evenement.Adresse.Rue)  @Html.DisplayFor(model => model.Evenement.Adresse.CodePostal)  @Html.DisplayFor(model => model.Evenement.Adresse.Ville) </li>
                <li class="list-group-item">Tranche d'âge de l'activité :  @Html.DisplayFor(model => model.Evenement.TrancheAge.Libelle) </li>
                <li class="list-group-item">Catégorie de l'événement :   @Html.DisplayFor(model => model.Evenement.Type.Libelle)</li>
                <li class="list-group-item">Commentaire de la réservation:   @Html.DisplayFor(model => model.Remarque)</li>

            </ul>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card" style="width: 30rem;">
            <img src="~/Image/calendrier.jpg" alt="Ma photo" class="card-img-top" width="300" height="280" />
            <div class="card-body">
                <h5 class="card-title text-center"> Mais c'est quand ?</h5>

            </div>
            <ul class="list-group list-group-flush">


                <li class="list-group-item">Date de début : @Html.DisplayFor(model => model.Evenement.DateDebut)</li>
                <li class="list-group-item">Date de fin : @Html.DisplayFor(model => model.Evenement.DateFin)</li>
                <li class="list-group-item">Date limite d'inscription : @Html.DisplayFor(model => model.Evenement.DateLimiteInscription)</li>
                <li class="list-group-item">Durée : @Html.DisplayFor(model => model.Evenement.Duree)</li>
                <li class="list-group-item">Durée :  @Html.DisplayFor(model => model.DateResa)</li>


            </ul>
        </div>
    </div>
</div>

<p class="my-3 text-center">
    @Html.ActionLink("Modifier", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Mes réservations", "GetCurrentUserResa")
</p>

