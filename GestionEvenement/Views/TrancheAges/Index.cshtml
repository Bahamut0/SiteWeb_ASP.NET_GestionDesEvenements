@model IEnumerable<GestionEvenement.Models.TrancheAge>

<h2 class="text-center">Liste de tranche d'âge</h2>


    <p>
        @Html.ActionLink("Créer une nouvelle", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libelle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeMin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeMax)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Libelle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgeMin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgeMax)
                </td>
                <td>
                    @Html.ActionLink("Modifier", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
