@model IEnumerable<GestionEvenement.Models.Type>

    <h2 class="text-center">Liste des catégories</h2>
    <p>
        @Html.ActionLink("Nouvelle catégorie", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Libelle)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Libelle)
            </td>
            <td>
                @Html.ActionLink("Modifier", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Supprimer", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>

